---
const { genrenavn, text1, text2, forfatter1, titel1, titel2, forfatter2 } =
  Astro.props;
---

<div
  class="bg-farvenavn-accent border
  border-farvenavn-blackish
  w-auto
  rounded-[60px] flex flex-col justify-center p-6 text-pretty"
>
  <h4 class="text-center font-serif text-mobile_h4 lg:text-h4 font-bold py-3">
    {genrenavn}
  </h4>
  <p class="text-center font-light p-3 text-p_genre">{text1}</p>
  <p class="text-center font-light p-3 text-p_genre">{text2}</p>
  <h5
    class="text-center font-serif text-farvenavn-primary font-bold lg:text-h5 text-mobile_h5 p-3"
  >
    Tidligere valg
  </h5>
  <div class="flex justify-center items-baseline">
    <article class="flex flex-col m-4">
      <slot name="one" /><div class="text-center">
        <p class="font-light text-farvenavn-primary leading-tight mt-2">
          {titel1}
        </p><p
          class="font-serif uppercase text-farvenavn-primary text-sm italic"
        >
          {forfatter1}
        </p>
      </div>
    </article>
    <article class="flex flex-col m-4">
      <slot name="two" /><div class="text-center">
        <p class="font-light text-farvenavn-primary leading-tight mt-2">
          {titel2}
        </p><p
          class="font-serif uppercase text-farvenavn-primary text-sm italic"
        >
          {forfatter2}
        </p>
      </div>
    </article>
  </div>
</div>

