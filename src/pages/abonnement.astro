---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Buttontwo from "../components/Buttontwo.astro";
---

<MainLayout title="Om Readly">
  <div>
    <img src="/topborder.svg" alt="" class="mt-20 mb-[-1px] w-[100vw]" />

    <!-- Wrapper med Alpine.js -->
    <section class="bg-farvenavn-whiteish p-0 m-0">
      <div
        class="max-w-4xl mx-auto px-5 py-2 rounded-lg"
        x-data="{ step: 1, abonnement: '', genre: '' }"
      >
        <!-- Step 1: Vælg Abonnement -->
        <div x-show="step === 1" class="space-y-6">
          <h3
            class="fade-in font-serif lg:text-h3 text-[8vw] uppercase font-bold p-4 text-center"
          >
            Vælg abonnement
          </h3>

          <div class="flex flex-col md:flex-row gap-6">
            <button
              @click="abonnement = 'Genrebox'; step = 2"
              class="w-full md:w-1/2 p-6 text-farvenavn-whiteish bg-farvenavn-primary rounded-3xl text-center font-bold text-h4 font-serif uppercase hover:bg-farvenavn-blackish transition border border-farvenavn-blackish"
            >
              Genrebox <br />
              <span
                class="font-light text-p_genre text-farvenavn-accent normal-case font-sans"
                >Din bog, din stil, dit valg.</span
              >
            </button>
            <button
              @click="abonnement = 'Surprisebox'; step = 3, genre = 'Overraskelse hver måned'"
              class="w-full md:w-1/2 p-6 text-farvenavn-whiteish bg-farvenavn-primary rounded-3xl text-center font-bold text-h4 font-serif uppercase hover:bg-farvenavn-blackish transition border border-farvenavn-blackish"
            >
              Surprisebox <br />
              <span
                class="font-light text-p_genre text-farvenavn-accent normal-case font-sans"
                >Perfekt til den nysgerrige læser.</span
              >
            </button>
          </div>
          <a href="/" class="flex justify-center p-8"
            ><Button text="Annuller" /></a
          >
        </div>

        <!-- Step 2: Vælg Genre -->
        <div x-show="step === 2" class="space-y-6">
          <h3
            class="fade-in font-serif lg:text-h3 text-[8vw] uppercase font-bold p-4 text-center"
          >
            Hvilken genre?
          </h3>
          <div class="flex flex-col gap-4">
            <button
              @click="genre = 'Biografier & Non-fiktion'; step = 3"
              class="p-3 text-p font-serif transition font-medium bg-farvenavn-primary rounded-full hover:bg-farvenavn-blackish text-farvenavn-whiteish border border-farvenavn-blackish text-center"
            >
              Biografier & Non-fiktion
            </button>
            <button
              @click="genre = 'Generel Fiktion'; step = 3"
              class="p-3 text-p font-serif transition font-medium bg-farvenavn-primary rounded-full hover:bg-farvenavn-blackish text-farvenavn-whiteish border border-farvenavn-blackish text-center"
            >
              Generel Fiktion
            </button>
            <button
              @click="genre = 'Historiske romaner'; step = 3"
              class="p-3 text-p font-serif transition font-medium bg-farvenavn-primary rounded-full hover:bg-farvenavn-blackish text-farvenavn-whiteish border border-farvenavn-blackish text-center"
            >
              Historiske romaner
            </button><button
              @click="genre = 'Fantasy & Sci-fi'; step = 3"
              class="p-3 text-p font-serif transition font-medium bg-farvenavn-primary rounded-full hover:bg-farvenavn-blackish text-farvenavn-whiteish border border-farvenavn-blackish text-center"
            >
              Fantasy & Sci-fi
            </button>
            <button
              @click="genre = 'Romantiske romaner'; step = 3"
              class="p-3 text-p font-serif transition font-medium bg-farvenavn-primary rounded-full hover:bg-farvenavn-blackish text-farvenavn-whiteish border border-farvenavn-blackish text-center"
            >
              Romantiske romaner
            </button>
            <button
              @click="genre = 'Krimi & Spænding'; step = 3"
              class="p-3 text-p font-serif transition font-medium bg-farvenavn-primary rounded-full hover:bg-farvenavn-blackish text-farvenavn-whiteish border border-farvenavn-blackish text-center"
            >
              Krimi & Spænding
            </button>
          </div>
          <a href="/" class="flex justify-center p-8"
            ><Button text="Annuller" /></a
          >
        </div>

        <!-- Step 3: Oversigt -->
        <div x-show="step === 3" class="space-y-6">
          <h3
            class="fade-in font-serif lg:text-h3 text-[8vw] uppercase font-bold p-4 text-center"
          >
            Din oversigt
          </h3>
          <div
            class="py-16 bg-farvenavn-whitish rounded-[60px] border border-farvenavn-blackish lg:flex lg:flex-row flex flex-col justify-around lg:text-start text-center items-center p-14 text-farvenavn-blackish"
          >
            <img
              src="/logo.svg"
              alt=""
              class="lg:w-[40%] w-[60%] lg:pb-0 pb-10"
            />
            <div class="">
              <p class="mb-4">
                <span class="font-bold font-serif uppercase italic"
                  >Abonnement:</span
                >
                <br />
                <span class="font-light text-p" x-text="abonnement"></span>
              </p>
              <p class="mb-4">
                <span class="font-bold font-serif uppercase italic">Genre:</span
                >
                <br />
                <span class="font-light text-p" x-text="genre"></span>
              </p>
              <p class="">
                <span class="font-bold font-serif uppercase italic">Pris:</span
                ><br />
                <span class="font-light text-p"> 150,- om måneden.</span>
              </p>
            </div>
          </div>
          <div class="flex justify-center gap-4">
            <Button text="Annuller" />

            <Buttontwo text="Gå til betaling" />
          </div>
        </div>

        <!-- Step 4: Betaling -->
        <div x-show="step === 4" class="space-y-6">
          <h3
            class="fade-in font-serif lg:text-h3 text-[8vw] uppercase font-bold p-4 text-center"
          >
            Bestil abonnemnet
          </h3>
          <!-- Container, der centrerer hele formularen på siden -->
          <div class="container mx-auto mt-10">
            <!-- Formularen -->
            <form
              action="#"
              class="max-w-xl mx-auto bg-farvenavn-whiteish p-8 rounded-[40px] border border-farvenavn-blackish"
            >
              <!-- Formularlayout opdelt i to kolonner ved hjælp af grid -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Kolonne 1: Leveringsadresse -->
                <div>
                  <!-- Overskrift for Leveringsadresse -->
                  <h3
                    class="text-storp font-serif font-bold text-farvenavn-blackish mb-4"
                  >
                    Leveringsadresse <!-- Tidligere 'Billing Address', nu ændret -->
                  </h3>

                  <!-- Fulde navn inputfelt -->
                  <div class="mb-4">
                    <label
                      for="name"
                      class="block text-p_genre font-light text-farvenavn-blackish"
                    >
                      Fulde Navn: <!-- Beskrivelsen af inputfelt -->
                    </label>
                    <input
                      type="text"
                      id="name"
                      placeholder="Indtast dit fulde navn"
                      required
                      class="mt-1 bg-farvenavn-whiteish block w-full border-farvenavn-accent rounded-lg text-farvenavn-blackish
                                  focus:ring-farvenavn-primary focus:border-farvenavn-primary"
                    />
                  </div>

                  <!-- Email inputfelt -->
                  <div class="mb-4">
                    <label
                      for="email"
                      class="block text-p_genre font-light text-farvenavn-blackish"
                    >
                      Email:
                    </label>
                    <input
                      type="email"
                      id="email"
                      placeholder="Indtast din e-mail"
                      required
                      class="mt-1 bg-farvenavn-whiteish block w-full border-farvenavn-accent rounded-lg text-farvenavn-blackish
                                  focus:ring-farvenavn-primary focus:border-farvenavn-primary"
                    />
                  </div>

                  <!-- Adresse inputfelt -->
                  <div class="mb-4">
                    <label
                      for="address"
                      class="block text-p_genre font-light text-farvenavn-blackish"
                    >
                      Adresse:
                    </label>
                    <input
                      type="text"
                      id="address"
                      placeholder="Indtast din adresse"
                      required
                      class="mt-1 bg-farvenavn-whiteish block w-full border-farvenavn-accent rounded-lg text-farvenavn-blackish
                                  focus:ring-farvenavn-primary focus:border-farvenavn-primary"
                    />
                  </div>

                  <!-- By inputfelt -->
                  <div class="mb-4">
                    <label
                      for="city"
                      class="block text-p_genre font-light text-farvenavn-blackish"
                    >
                      By:
                    </label>
                    <input
                      type="text"
                      id="city"
                      placeholder="Indtast din by"
                      required
                      class="mt-1 bg-farvenavn-whiteish block w-full border-farvenavn-accent rounded-lg text-farvenavn-blackish
                                  focus:ring-farvenavn-primary focus:border-farvenavn-primary"
                    />
                  </div>

                  <!-- Stat inputfelt -->
                  <div class="mb-4">
                    <label
                      for="state"
                      class="block text-p_genre font-light text-farvenavn-blackish"
                    >
                      Stat:
                    </label>
                    <input
                      type="text"
                      id="state"
                      placeholder="Indtast din stat"
                      required
                      class="mt-1 bg-farvenavn-whiteish block w-full border-farvenavn-accent rounded-lg text-farvenavn-blackish
                                  focus:ring-farvenavn-primary focus:border-farvenavn-primary"
                    />
                  </div>

                  <!-- Postnummer inputfelt -->
                  <div class="mb-4">
                    <label
                      for="zip"
                      class="block text-p_genre font-light text-farvenavn-blackish"
                    >
                      Postnummer:
                    </label>
                    <input
                      type="text"
                      id="zip"
                      placeholder="Indtast dit postnummer"
                      required
                      class="mt-1 bg-farvenavn-whiteish block w-full border-farvenavn-accent rounded-lg text-farvenavn-blackish
                                  focus:ring-farvenavn-primary focus:border-farvenavn-primary"
                    />
                  </div>
                </div>

                <!-- Kolonne 2: Betalingsoplysninger -->
                <div>
                  <!-- Overskrift for betalingssektionen -->
                  <h3
                    class="text-storp font-serif font-bold text-farvenavn-blackish mb-4"
                  >
                    Betaling <!-- Tidligere 'Payment' -->
                  </h3>

                  <!-- Kortindehaverens navn inputfelt -->
                  <div class="mb-4">
                    <label
                      for="cardName"
                      class="block text-p_genre font-light text-farvenavn-blackish"
                    >
                      Navn på kortet:
                    </label>
                    <input
                      type="text"
                      id="cardName"
                      placeholder="Indtast kortindehaverens navn"
                      required
                      class="mt-1 bg-farvenavn-whiteish block w-full border-farvenavn-accent rounded-lg text-farvenavn-blackish
                                  focus:ring-farvenavn-primary focus:border-farvenavn-primary"
                    />
                  </div>

                  <!-- Kreditkortnummer inputfelt -->
                  <div class="mb-4">
                    <label
                      for="cardNumber"
                      class="block text-p_genre font-light text-farvenavn-blackish"
                    >
                      Kreditkortnummer:
                    </label>
                    <input
                      type="text"
                      id="cardNumber"
                      placeholder="Indtast kortnummer"
                      required
                      class="mt-1 bg-farvenavn-whiteish block w-full border-farvenavn-accent rounded-lg text-farvenavn-blackish
                                  focus:ring-farvenavn-primary focus:border-farvenavn-primary"
                    />
                  </div>

                  <!-- Udløbsmåned og udløbsår -->
                  <div class="flex justify-between mb-4">
                    <!-- Udløbsmåned -->
                    <div class="w-1/2 mr-2">
                      <label
                        for="expMonth"
                        class="block text-p_genre font-light text-farvenavn-blackish"
                      >
                        Udløbsmåned:
                      </label>
                      <input
                        type="text"
                        id="expMonth"
                        placeholder="MM"
                        required
                        class="mt-1 bg-farvenavn-whiteish block w-full border-farvenavn-accent rounded-lg text-farvenavn-blackish
                                  focus:ring-farvenavn-primary focus:border-farvenavn-primary"
                      />
                    </div>
                    <!-- Udløbsår -->
                    <div class="w-1/2 ml-2">
                      <label
                        for="expYear"
                        class="block text-p_genre font-light text-farvenavn-blackish"
                      >
                        Udløbsår:
                      </label>
                      <input
                        type="text"
                        id="expYear"
                        placeholder="YYYY"
                        required
                        class="mt-1 bg-farvenavn-whiteish block w-full border-farvenavn-accent rounded-lg text-farvenavn-blackish
                                  focus:ring-farvenavn-primary focus:border-farvenavn-primary"
                      />
                    </div>
                  </div>

                  <!-- CVV inputfelt -->
                  <div class="mb-4">
                    <label
                      for="cvv"
                      class="block text-p_genre font-light text-farvenavn-blackish"
                    >
                      CVV:
                    </label>
                    <input
                      type="text"
                      id="cvv"
                      placeholder="Indtast CVV"
                      required
                      class="mt-1 bg-farvenavn-whiteish block w-full border-farvenavn-accent rounded-lg text-farvenavn-blackish
                                  focus:ring-farvenavn-primary focus:border-farvenavn-primary"
                    />
                  </div>
                </div>
              </div>

              <!-- Knap til at indsende formularen -->
              <div class="flex justify-between pt-4">
                <Button text="Annuller" />
                <Buttontwo text="Køb abonnement" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <img src="/btmborder.svg" alt="" class="mt-[-1px] mb-20 w-[100vw]" />
  </div>
</MainLayout>
